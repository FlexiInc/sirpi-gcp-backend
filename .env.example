# ==========================================
# CLERK AUTHENTICATION
# ==========================================
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# ==========================================
# SUPABASE DATABASE
# ==========================================
SUPABASE_USER=postgres
SUPABASE_PASSWORD=your_supabase_password
SUPABASE_HOST=aws-1-us-west-1.pooler.supabase.com
SUPABASE_PORT=6543
SUPABASE_DBNAME=postgres

# ==========================================
# GOOGLE CLOUD & ADK
# ==========================================
# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT=sirpi-476300
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_GENAI_USE_VERTEXAI=TRUE

# Google AI API Key (for development/testing with AI Studio)
# For local dev: set GOOGLE_GENAI_USE_VERTEXAI=FALSE and use this key
GOOGLE_API_KEY=google_api_key

# ADK Configuration
ADK_APP_NAME=sirpi
ADK_SESSION_SERVICE_TYPE=database  # Uses Supabase connection

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7

# ==========================================
# CLOUD-AGNOSTIC DEPLOYMENT CONFIG
# ==========================================
# Default cloud provider for user deployments (gcp or aws)
DEFAULT_CLOUD_PROVIDER=gcp

# GCP-specific (for deploying user repos to GCP)
GCP_ARTIFACT_REGISTRY_LOCATION=us-central1
GCP_ARTIFACT_REGISTRY_REPOSITORY=sirpi-deployments
GCP_CLOUD_RUN_REGION=us-central1

# AWS-specific (for deploying user repos to AWS)
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=your_aws_account_id
AWS_ECR_REGION=us-west-2

# ==========================================
# GITHUB APP (unchanged - Repository Access)
# ==========================================
GITHUB_APP_ID=your_app_id
GITHUB_APP_CLIENT_ID=your_client_id
GITHUB_APP_CLIENT_SECRET=your_client_secret
GITHUB_APP_PRIVATE_KEY_PATH=./github-app-private-key.pem
GITHUB_APP_WEBHOOK_SECRET=your_webhook_secret
GITHUB_APP_NAME=your-github-app-name

# GitHub URLs
GITHUB_BASE_URL=https://github.com
GITHUB_API_BASE_URL=https://api.github.com

# ==========================================
# E2B CODE EXECUTION (unchanged - Deployment)
# ==========================================
E2B_API_KEY=e2b_your_api_key

# ==========================================
# APPLICATION SETTINGS (unchanged)
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000

# ==========================================
# GOOGLE CLOUD STORAGE (for generated artifacts)
# ==========================================
GCS_BUCKET_NAME=sirpi-generated-files
GCS_BUCKET_REGION=us-central1
